<% content_for :nav, render('shared/form_navbar') %>
  <div class="maxi-search-bar-home maxi-choose-bias-form absolute-form javi">
    <%= simple_form_for @comparison do |f| %>
      <%= f.input :publisher_one, label: false %>
      <%= f.input :publisher_two, label: false %>
      <%= f.button :submit, 'Compare', class: "button-white javi-compare-button", disabled: false %>
    <% end %>
  </div>
  <div id="map"
    style="width: 100%; height:83vh; margin: 0 auto; margin-bottom: 100px;"
    data-markers="<%= @markers.to_json %>"
    data-counters="<%= @articles.map { |article| article["source"] }.tally %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>


</div>
