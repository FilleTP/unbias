<h1>Test Articles</h1>
<div id="map"
     style="width: 100%; height: 85vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="maxi-search-bar-home">
  <%= simple_form_for @comparison do |f| %>
    <%= f.input :publisher_one, collection: Comparison::SOURCES, selected: 1%>
    <%= f.input :publisher_two, collection: Comparison::SOURCES, selected: 1%>
    <%= f.button :submit, 'Search'%>
  <% end %>
  

<div class="articles-compare-container">
  <div class=articles-left>
    <% @articles.each do |article| %>
      <div class="articles-card-container">
        <div class="articles-card-image">
        <img src="<% article["image_url"]%>" alt="article image">
        <img src="https://source.unsplash.com/random" alt="article image" class="articles-image">
        </div>
        <div class="article-card-info">
          <a href=<%= article["url"]%>>
            <p><%= article["author"] %> </p>
            <p><%= article["title"] %> </p>
            <p><%= article["description"] %> </p>
          </a>
        </div>
        <div class="articles-card-date">
          <%= article["published_at"] %>
        </div>
       </div>
    <% end %>
  </div>
    <div class=articles-right>
    <% @articles.each do |article| %>
      <div class="articles-card-container">
        <div class="articles-card-date">
          <%= article["published_at"] %>
        </div>
        <div class="article-card-info">
          <a href=<%= article["url"]%>>
            <p><%= article["author"] %> </p>
            <p><%= article["title"] %> </p>
            <p><%= article["description"] %> </p>
          </a>
        </div>
        <div class="articles-card-image">
          <img src="<% article["image_url"]%>" alt="article image">
        </div>
       </div>
    <% end %>
  </div>
</div>
