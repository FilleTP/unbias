<h1>Test Articles</h1>

<% @articles.each do |article| %>
  <ul>
    <li>
      <a href=<%= article["url"]%>>
        <p><%= article["author"] %>:
        <%= article["title"] %></p>
        <p><%= article["description"] %></p>
      </a>
    </li>
  </ul>
<% end %>


<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
